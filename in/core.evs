fun loot(flag, object_id, reward, amount, next) {
    if!(flag) {
        <0x2391> = reward;

        <0x2395> = object_id;

        if(reward < 0x0100) { 
            if(amount > 0x00) {
                <0x2393> = amount;
            }
        } else {
            if(amount > 0x01) {
                <0x2461> = amount - 0x01;
            }    
        }

        call_id(0x39);
        
        if(next > 0x00) {
            <0x2461> = next - 0x01;
        }

        if(<0x22ea, 0x01>) {
            set(flag);
        }
    }
}

