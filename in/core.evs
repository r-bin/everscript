    if(character == CHARACTER.BOTH) {
        code(0x20, calculate(x), calculate(y), "// (20) Teleport both to 43 93");
    } else {
        code(0x43, entity_t(character), calculate(x), calculate(y), "// (42) Teleport $2835 to a7, b9");
    }
}
